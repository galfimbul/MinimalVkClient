<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:cardElevation="1dp"
        app:cardMaxElevation="3dp"
        app:cardCornerRadius="8dp"
        app:contentPadding="4dp"
        style="@style/cv_list_item">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <include
                android:id="@+id/base_top_views"
                layout="@layout/base_top_views"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <com.aevshvetsov.minimalvkclient.ui.custom.ExpandableTextView
                android:id="@+id/tv_caption"
                tools:text="some very long text............."
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/base_top_views"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/rv_multiple_photo_attachments"
                android:maxLines="3"
                android:layout_margin="@dimen/views_margin_smallest"
                    android:textColor="@android:color/black"/>

        <ImageView
                android:id="@+id/iv_post_photo"
                android:layout_width="0dp"
                android:layout_height="320dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_caption"
                app:layout_constraintBottom_toTopOf="@+id/base_bottom_views"
                android:layout_margin="4dp"
                android:src="@drawable/placeholder"/>
        <include
                android:id="@+id/base_bottom_views"
                layout="@layout/base_bottom_views"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rv_multiple_photo_attachments"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
