<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1dp"
        app:cardMaxElevation="3dp"
        app:cardCornerRadius="8dp"
        app:contentPadding="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <include
                android:id="@+id/base_top_views"
                layout="@layout/base_top_views"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <ScrollView
                android:id="@+id/sv_caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/base_top_views"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/iv_post_photo">
            <TextView
                    android:id="@+id/tv_caption"
                    tools:text="some very long text............."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="40000"
                    android:textColor="@android:color/black"/>

        </ScrollView>

        <ImageView
                android:id="@+id/iv_post_photo"
                android:layout_width="0dp"
                android:layout_height="560dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sv_caption"
                app:layout_constraintBottom_toTopOf="@+id/base_bottom_views"
                android:layout_margin="4dp"
                android:src="@drawable/placeholder"/>
        <include
                android:id="@+id/base_bottom_views"
                layout="@layout/base_bottom_views"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/iv_post_photo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
