<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    <ImageView
            android:id="@+id/iv_like"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_like_unselected_24"
            android:layout_margin="@dimen/views_standard_margin"/>
    <TextView
            android:id="@+id/tv_likes_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_like"
            app:layout_constraintBottom_toBottomOf="@id/iv_like"
            app:layout_constraintStart_toEndOf="@id/iv_like"
            android:gravity="center_horizontal|center_vertical"
            tools:text="600"/>
    <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/views_standard_margin"
            app:layout_constraintStart_toEndOf="@id/tv_likes_count"
            app:layout_constraintTop_toTopOf="@+id/iv_like"
            app:layout_constraintBottom_toBottomOf="@id/iv_like"
            android:src="@drawable/ic_dialogs_24dp"
            tools:layout_editor_absoluteX="62dp"/>

    <TextView
            android:id="@+id/tv_comments_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_like"
            app:layout_constraintBottom_toBottomOf="@id/iv_like"
            app:layout_constraintStart_toEndOf="@id/iv_comment"
            android:gravity="center_horizontal|center_vertical"
            tools:text="600"/>
    <ImageView
            android:id="@+id/iv_share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_like"
            app:layout_constraintTop_toTopOf="@id/iv_like"
            android:src="@drawable/ic_share"
            android:scaleX="-1"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tv_comments_count"
            android:layout_marginStart="@dimen/views_standard_margin"/>
    <ImageView
            android:id="@+id/iv_views"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_views_count"
            app:layout_constraintBottom_toBottomOf="@id/iv_like"
            android:src="@drawable/ic_views"
            android:layout_marginEnd="4dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/tv_views_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_like"
            app:layout_constraintBottom_toBottomOf="@id/iv_like"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="18sp"
            tools:text="500"
            app:layout_constraintVertical_bias="0.4"/>
</androidx.constraintlayout.widget.ConstraintLayout>